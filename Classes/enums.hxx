/**
 * Enumeration that represents all the fonts in Evermaze.
 */
enum Fonts { LIGHT, BOLD, THIN, LIGHT_ITA, BOLD_ITA };

/**
 * Enumeration that represents all Scenes.
 */
enum Scenes { INTRO, CONTROLS, MODES, LEVELS };

/**
 * Enumeration that represents all Modes/
 */
enum Modes { ESACPE, ENERGY, SEARCH, SURVIVE, PORTALS, TILES, CONTROLSM };

/**
 * Enumeration of the possible swipe status
 */
enum Directions { NONE, UP, DOWN, LEFT, RIGHT };

